{
  "verbose": true,
  "automock": false,
  "resetMocks": true,
  "transformIgnorePatterns": ["/node_modules/"],
  "transform": {
    "\\.(js|jsx|ts|tsx)$": "babel-jest"
  },
  "unmockedModulePathPatterns": [
    "react",
    "react-test-renderer",
    "@testing-library/*"
  ],
  "collectCoverage": false,
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!**/node_modules/**",
    "!**/dist/**"
  ],

  "coverageDirectory": "coverage",
  "coverageReporters": ["json", "lcov", "text", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
